<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<!-- Configuración de la sección de NHibernate -->
		<section name="hibernate-configuration"
				 type="NHibernate.Cfg.ConfigurationSectionHandler, NHibernate"/>
	</configSections>

	<!-- Configuración de NHibernate -->
	<hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
		<session-factory>
			<!-- Configuración de conexión -->
			<property name="connection.driver_class">NHibernate.Driver.MySqlDataDriver</property>
			<property name="connection.connection_string">
				Server=localhost;Port=3306;Database=2taldea;User Id=root;Password=1WMG2023;Old Guids=True;
			</property>

			<!-- Dialecto de MySQL -->
			<property name="dialect">NHibernate.Dialect.MySQL5Dialect</property>

			<!-- Mostrar las consultas SQL en la consola -->
			<property name="show_sql">true</property>

			<!-- Mapeo -->
			<mapping assembly="2taldea" />
		</session-factory>
	</hibernate-configuration>
</configuration>
